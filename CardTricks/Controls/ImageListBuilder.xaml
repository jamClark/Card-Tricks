<UserControl x:Class="CardTricks.Controls.ImageListBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="244.333" Height="234.775">
    <Grid Margin="0">
        <ListBox x:Name="listboxImages" HorizontalAlignment="Left" 
                 Height="185" 
                 Margin="3,29,0,0" 
                 VerticalAlignment="Top" 
                 Width="237" 
                 SelectionChanged="ListBox_SelectionChanged"
                 >
        </ListBox>
        <Button Content="Add Image" HorizontalAlignment="Left" Margin="3,3,0,0" VerticalAlignment="Top" Width="116" Click="OnClickButton_AddImage"/>
        <Button Content="Remove Selected" HorizontalAlignment="Left" Margin="124,3,0,0" VerticalAlignment="Top" Width="116" Click="OnButtonClick_RemoveSelection"/>

    </Grid>
</UserControl>
